<div class="well">
  <% if @brands.any?() %>
    <h2>Here are the brand(s): </h2>
    <ul>
      <% @brands.each() do |brand| %>
        <li><%= brand.name() %></li>
      <% end %>
    </ul>
  <% else %>
    <h2>There aren't any brands yet!</h2>
  <% end %>
</div><br>

<form action="/add_brand" method="post">
  <fieldset>
    <legend>Add a Brand Here</legend>
    <label for="brand_name"></label>
    <input id="brand_name" name="brand_name" type="text">

    <button type="submit" class="btn btn-secondary">Add Brand</button>
  </fieldset>
</form>
