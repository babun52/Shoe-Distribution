<div class="jumbotron">
  <h1>Epicodus Shoe Distribution</h1>
</div>
<div class="col-lg-8">
  <div class="well">
    <% if @stores.any?() %>
      <h2>Store(s): </h2>
      <ul class="list-inline">
        <% @stores.each() do |store| %>
          <li><a class="btn btn-primary" href="/stores/<%= store.id() %>"><%= store.name() %></a></li>
        <% end %>
      </ul>
    <% else %>
      <h2>There aren't any stores yet!</h2>
    <% end %>
  </div>
</div>
<div class="col-lg-4">
  <form action="/stores" method="post">
    <fieldset>
      <legend>Add a Store Here</legend>
      <label for="store_name"></label>
      <input id="store_name" name="store_name" type="text" placeholder="Enter a Store Name">

      <button type="submit" class="btn btn-primary">Add Store</button>
    </fieldset>
  </form>
</div>
<% if !@stores.any?()%>
<% else %>
  <div class="col-lg-8">
    <div class="well">
      <% if @brands.any?() %>
        <h2>Brand(s): </h2>
        <ul class="list-inline">
          <% @brands.each() do |brand| %>
            <li><%= brand.name() %></li>
          <% end %>
        </ul>
      <% else %>
        <h2>There aren't any brands yet!</h2>
      <% end %>
    </div>
  </div>
  <div class="col-lg-4">
    <form action="/brands" method="post">
      <fieldset>
        <legend>Add a Brand Here</legend>
        <label for="brand_name"></label>
        <input id="brand_name" name="brand_name" type="text" placeholder="Enter a Brand Name">

        <button type="submit" class="btn btn-primary">Add Brand</button>
      </fieldset>
    </form>
  </div>
<% end %>
