<div class="jumbotron">
  <h1>Epicodus Shoe Distribution</h1>
</div>
<div class="well">
  <% if @stores.any?() %>
    <h2>Here are the store(s): </h2>
    <ul class="list-inline">
      <% @stores.each() do |store| %>
        <li><a class="btn btn-primary" href="/stores/<%= store.id() %>"><%= store.name() %></a></li>
      <% end %>
    </ul>
  <% else %>
    <h2>There aren't any stores yet!</h2>
  <% end %>
</div>

<form action="/stores" method="post">
  <fieldset>
    <legend>Add a Store Here</legend>
    <label for="store_name"></label>
    <input id="store_name" name="store_name" type="text" placeholder="Enter a Store Name">

    <button type="submit" class="btn btn-secondary">Add Store</button>
  </fieldset>
</form><br>

<% if !@stores.any?()%>
<% else %>
<form action="/brands" method="post">
  <fieldset>
    <legend>Add a Brand Here</legend>
    <label for="stores">Select a store</label>
    <select id="stores" name="stores" type='text'>
      <% @stores.each() do |store| %>
        <option value="<%= store.id() %>"><%= store.name() %></option>
      <% end %>
    </select>
    <label for="brand_name"></label>
    <input id="brand_name" name="brand_name" type="text" placeholder="Enter a Brand Name">

    <button type="submit" class="btn btn-secondary">Add Brand</button>
  </fieldset>
</form><br>
<% end %>
